---
import Footer from '../components/Global/Footer.astro';
import Menu from '../components/Global/Menu.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/cicovisa.ico" />
		<meta name="generator" content={ Astro.generator } />
		<meta name="description" content="Somos una empresa filial de corporativo CIOVISA buscamos mas que vender un producto dar un servicio al cliente dándole un valor agregado y múltiple función al producto que nos hace favor de adquirir siempre poniendo a su consideración 3 opciones de marca con similares.">
		<meta name="keywords" content="cicovisa, juguetes, tinacos, motos, calentadores, solares, deportivo, material, electrico, tanques, estacionarios, autos, bicicletas, despensas">
		<meta name="author" content="@chrispter">
		<title>{ title }</title>
	</head>
	<body>
		<Menu />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
